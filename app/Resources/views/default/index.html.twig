        </div>
    </div>

    {% for i in 0..5 %}
        {% set categorie = [['actualite', 'politique', 'societe', 'culture', 'reportage', 'tat', 'avss', 'pmp'],
        ['Actualités', 'Politique', 'Société', 'Culture', 'Reportages', 'Tête à tête',
        'Aliénor VS Ségolène', 'Politesse ou Polémique', 'Chroniques']] %}
        <div class="row margTop">
            <div class="titleBar">
                <a href="{{ path('categorie', {'catId': categorie[0][i] }) }}"><h1>{{ categorie[1][i] }}</h1></a>
            </div>
            {% for j in 0..1 %}
                <div class="col-xs-6 articleImage crop">
                    <a href="{{ path('article', {'catId' : categorie[0][i], 'id': j}) }}">
                        <img class="imageContained cropedImage" src="http://api.adorable.io/avatars/500/{{ j+i+i }}" alt="">
                        <h4 class="articleCaption">
                            {{ 'Lorem ipsum dolor sit amet test olol okaofkaoe apzpnazfolol okaofkaoe apzpnazf'|length > 55 ?
                            'Lorem ipsum dolor sit amet test olol okaofkaoe apzpnazfolol okaofkaoe apzpnazf'|slice(0, 55) ~ '...' :
                            'Lorem ipsum dolor sit amet test olol okaofkaoe apzpnazfolol okaofkaoe apzpnazf'  }}
                        </h4>
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endfor %}
{% endblock %}
