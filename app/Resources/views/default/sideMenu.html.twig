<ul class="list-inline">
    <li><a href="{{ reseaux.facebook }}"><i class="fa fa-3x fa-facebook-square facebook" aria-hidden="true"></i></a></li>
    <li><a href="{{ reseaux.twitter }}"><i class="fa fa-3x fa-twitter twitter" aria-hidden="true"></i></a></li>
    <li><a href="{{ reseaux.instagram }}"><i class="fa fa-3x fa-instagram instagram" aria-hidden="true"></i></a></li>
</ul>
<div class="titleCatAndArt row noPadding">
    <h3 class="margTop titleCatAndArt">Axelle Express</h3>
</div>
{% for sideSelectedArticle in articlesRightMenu %}
    {% if sideSelectedArticle.article != null %}
        <div class="row sideMenuLink">
            <a href="{{ path('article', {'id': sideSelectedArticle.article.id}) }}">
                <div class="inlined">
                    <img class="col-xs-4 img-sideMenu" src="{{ asset('/uploads/images/articles/') }}{{ sideSelectedArticle.article.image }}" alt="">
                    <h4 class="col-xs-8">
                        {{ sideSelectedArticle.article.titre|length > 15 ?
                        sideSelectedArticle.article.titre|slice(0, 15) ~ '...' :
                        sideSelectedArticle.article.titre  }}
                    </h4>
                </div>
            </a>
        </div>
    {% endif %}
{% endfor %}
